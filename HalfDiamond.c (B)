#include <stdio.h>  // Preprocessor Directives (for printing operation)

int main() //Main Code begins here
{
	int i,j,k; //Variable Declaration
	// Prints the upper half of the triangle
	for (i=1;i<=5;++i)
	{
		for (j=5;j>i;--j)
		{
			printf(" ");    //Prints Space Elements
		}
		for (k=1;k<=j;++k)
		{
			printf("%d",k);  // Prints numbers
		}
		printf("\n");  // Go on next line
	}
	//Prints Lower Triangle
	for (i=5;i>=1;--i)
	{
		for (j=i;j<=5;++j)
		{
			printf(" "); //Prints Space Elements
		}
		for (k=1;k<i;++k)
		{
			printf("%d",k); // Prints numbers
		}
		printf("\n");  // Go on next line
	}
	return 0;
}
